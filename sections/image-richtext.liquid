<div class="section7">
  <div class="overlay">
    {% for block in section.blocks %}
      {% if block.type == 'image_picker' -%}
        <div class="image">
          {{
            block.settings.image
            | image_url: width: 80
            | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
          }}
        </div>
      {% elsif block.type == 'richtext' %}
        <div class="richtext">
          <h1>{{ block.settings.imgrich }}</h1>
          <p>{{ block.settings.text }}</p>
        </div>
      {% elsif block.type == 'text' %}
        <div class="text">
          <p>{{ block.settings.imgtxt }}</p>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

