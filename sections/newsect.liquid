<div class="row">
  {% for block in section.blocks %}
    {% if block.type == 'text' %}
      <div class="left">
        <h1 class="ri">{{ block.settings.imgrich1 }}</h1>
        <h5 class="para1" style="font-size:18px;">{{ block.settings.imgrich2 }}</h5>
        <div class="button01">
          <button style="height:50px; width:250px; font-weight:bold ; font-size:16px; margin-top:30px;">
            {{ block.settings.imgrich3 }}
          </button>
        </div>
      </div>

      <div class="right">
        <h2 class="he2">{{ block.settings.img1 }}</h2>
        <p class="para2">{{ block.settings.img2 }}</p>
      </div>
    {% endif %}
  {% endfor %}
</div>

{% style %}
         .row {
         display: flex;
         height:90vh;
       }

       .left {

         flex: 1;
         padding: 30px;
         background-color:#1a243f;
         width:40%;
         background-size: cover;
         background-position: center;

       }
       .right{
       background: url("https://sgklegal.theopenxpress.com/wp-content/uploads/2022/07/about_testi_right.jpg")
         no-repeat center;
         background-size: cover;
         background-color: white;
         color:black;
         width:60%;
         padding-left: 20px;
         display:flex;
         flex-direction:column;
       }

   h1{
         color:#ad9779;
         font-size:50px;
         padding-bottom:50px;
       }

       .he2{
         padding-top:50px;
         color:black;
         font-size:20px;
         padding-bottom:50px;
       }

    h5{
      color:white;
      font-size:15px;
     }
      .para2 {
         color:black;
          font-size:20px;
         color:white;
         padding-bottom:20px;
       }

  button:hover     {
    background-color:transparent;
  }
{% endstyle %}
