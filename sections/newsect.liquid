{% comment %}
  <div class="row">
    <div class="section1">
       {% for block in section.blocks %}
      <div class="left">
        {% if block.type =="text" %}
        <h1>{{ block.settings.richtext1 }}</h1>
        <p>{{ block.settings.richtext2 }}</p>
        <button>{{ block.settings.richtext3 }}</button>
         {% endif %}
       </div>
    </div>

    <div class="section2">
      <div class="right">
          {% elsif block.type=="rich_text" %}
        <h2>{{ block.settings.richtext11 }}</h2>
        <p class="p1">{{ block.settings.richtext12 }}</p>

        {% endif %}
      </div>
  {% endfor %}

  </div>
{% endcomment %}

<div class="sections">
  <div class="container1">
    {% for block in section.blocks %}
      {% if block.type == 'text' %}
        <div class="section1">
          <h1>{{ block.settings.richtext1 }}</h1>
          <p>{{ block.settings.richtext2 }}</p>
          <div class="button">
            <button>{{ block.settings.richtxt3 }}</button>
          </div>
        </div>
      {% endif %}
      {% if block.type == 'richtext' %}
        <div class="section2">
          <p>{{ block.settings.richtext11 }}</p>
          <p>{{ block.settings.richtext12 }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% style %}
    .row {
    display: flex;
    height:70vh;
  }
  .section1 {
    flex: 1;
    padding: 20px;
    border: 1px solid #ccc;
    background-color:#1a243f;
    width:40%;
    background-image: url(C:\Users\Administrator\Downloads\bgg.jpg);
    background-size: cover;
    background-position: center;

  }
  .section2{
    background-color: white;
    color:black;
    width:60%;
    padding: 20px;
  }

  h1{
    color:#ad9779;
    font-size:50px;
    padding-bottom:50px;
  }

  h2{
    padding-top:50px;
    color:black;
    font-size:20px;
    padding-bottom:50px;
  }

  p{
    font-size:20px;
    color:white;
    padding-bottom:20px;
  }
  .p1{
    color:black;
  }

  button {
      position: relative;
      height:60px;
      width:300px;
      color:black;
      background-color:white;
      font-size: 14px;
      padding: 14px 60px;
      overflow: hidden;
      transition: 1s all ease;

    }
    button::before {
      background: #ad9779;
      content: "";
      position: absolute;
      transform: translate(-50%, -50%);
      z-index: -1;
      transition: all 0.6s ease;
      width: 100%;
      height: 0%;
      transform: translate(-50%, -50%) rotate(45deg);
    }
    button:hover::before {
      height: 380%;
    }
{% endstyle %}
