  "settings": [
    {
      "type": "text",
      "id":"heading",
      "label":"Heading"
    },
    {
          "type":"richtext",
          "id":"text",
          "label":"Add text"
        }

  ],
  "max_blocks":10,
  "blocks":
  [

    {
      "type":"image_picker",
      "name":"image",
      "settings":[
        {
          "type":"image_picker",
          "id":"image",
          "label":"select image"
        },
        {
          "type":"richtext",
          "id":"richtxt",
          "label":"Add text"
        }

      ]
    }

   ],
  "presets" :[
    {
