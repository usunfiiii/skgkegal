<footer class="foot">
  <div class="container">
    {% for block in section.blocks %}
      {% if block.type == 'text' %}
        <div class="footer-colum-text">
          <h1>{{ block.settings.heading }}</h1>
          <p>{{ block.settings.text }}</p>
        </div>
      {% elsif block.type == 'image_picker' -%}
        <div class="img">
          {{
            block.settings.image
            | image_url: width: 20
            | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
          }}
        </div>
        <div class="txt">
          <p>{{ block.settings.richtxt }}</p>
        </div>
      {% endif %}
    {% endfor %}
    <div class="bn">
      <button class="btn btn1" style="width:250px;">{{ section.settings.button }}</button>
    </div>
  </div>
</footer>

